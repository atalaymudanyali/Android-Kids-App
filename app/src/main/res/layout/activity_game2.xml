<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Game2Activity"
    android:background="#e6d7ff">

    <ImageView
        android:id="@+id/season_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/spring_image" />

    <TextView
        android:id="@+id/season_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/season_image"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:text="Spring"
        android:visibility="gone" />

    <Button
        android:id="@+id/option1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/season_image"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:text="Option 1" />

    <Button
        android:id="@+id/option2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/season_image"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:text="Option 2" />

    <Button
        android:id="@+id/option3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/option1_button"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:text="Option 3" />

    <Button
        android:id="@+id/option4_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/option2_button"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:text="Option 4" />

</RelativeLayout>
